<!DOCTYPE html>
<html>
<head>
  <title>Profit and Loss Statement</title>
  <!-- Include any CSS or JavaScript files here -->
   
</head>
<body>
  <h1>Profit and Loss Statement</h1>
  
  <p>Start Date: <%= @start_date %></p>
  <p>End Date: <%= @end_date %></p>

  <!-- Add the form with the submit button -->
  <%= form_with(model: @profit_loss_statement, url: profit_loss_statements_path, method: :post) do |form| %>
    
    <div class="field">
      <%= form.label :date %>
      <%= form.date_field :date %>
    </div>

    <div class="field">
      <%= form.label :name %>
      <%= form.text_field :name %>
    </div>

    <div class="field">
      <%= form.label :amount %>
      <%= form.number_field :amount %>
    </div>
    
    <div class="field">
      <%= form.label :revenue %>
      <%= form.number_field :revenue %>
    </div>

    <div class="field">
      <%= form.label :expenses %>
      <%= form.number_field :expenses %>
    </div>

    <div class="field">
      <%= form.label :sales %>
      <%= form.number_field :sales %>
    </div>

    <div class="field">
      <%= form.label :accounts_receivable %>
      <%= form.number_field :accounts_receivable %>
    </div>

    <div class="field">
      <%= form.label :accounts_payable %>
      <%= form.number_field :accounts_payable %>
    </div>

    <div class="actions">
      <%= form.submit "Submit" %>
    </div>
  <% end %>

  <!-- Add the form for showing the report -->
 

    <div class="actions">
      <button type="submit" id="show-report">Show Report</button>
    </div>


 

<!-- Container to display submitted data -->
  <div id="submitted-data">
    <h2>Profit Loss Statement Details</h2>
    <ul>
      <!-- Data will be displayed here -->
    </ul>
  </div>

 

</body>
</html>
